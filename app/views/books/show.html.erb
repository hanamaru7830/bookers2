<%= render 'books/userinfo', book: @book, user: @user %>
<h1>Book detail</h1>
<div>
  <!--%= attachment_image_tag @book, :image %>-->
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>
  <p><%= @book.user.name %></p>

  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy",book_path(@book.id), method: :delete %>
  <% end %>
</div>