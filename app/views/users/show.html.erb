<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>
<%= render 'books/userinfo', book: @book, user: @user %>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p>
    <%= @user.name %>

  </p>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>
