<h1>User info</h1>
<%= link_to 'edit', edit_user_path(current_user.id) %>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag('no_image.jpg') %>
</div>
<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <!--%= link_to post_image_path(post_image.id) do %>-->
  <%= attachment_image_tag @user, :profile_image %>
  <!--% end %>-->
  <p>投稿ユーザー画像：<%= image_tag('no_image.jpg') %></p>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>
